@{
    ViewBag.Title = "Mile Converter";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <form method="get">
        <div class="col-md-6">
            <p><label for="Miles">Miles</label></p>
            <input id="MilesConv" name="miles" type="number" step="0.01" required formethod="get" />

        </div>


        <div class="col-md-6">
            <h3><label for="Metric">Select a unit:</label></h3>
            <div class="w3-container">
                <ul style="list-style-type:none">
                    <li><input type='radio' id='mil' name='Metric' value='millimeters' />Millimeters</li>
                    <li><input type='radio' id='cent' name='Metric' value='centimeters' />Centimeters</li>
                    <li><input type='radio' id='met' name='Metric' value='meters' />Meters </li>
                    <li><input type='radio' id='kilo' name='Metric' value='kilometers' />Kilometers</li>
                </ul>
            </div>
            <input type="submit" />

        </div>
    </form>
</div>
<p>@ViewBag.Message</p>

